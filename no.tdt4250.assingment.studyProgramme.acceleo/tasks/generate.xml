<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="no.tdt4250.assingment.studyProgramme.acceleo">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse/dsl-2019-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../model-transformation"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="no.tdt4250.assingment.studyProgramme.acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/no.tdt4250.assingment.studyProgramme.acceleo/bin"/>
    </path>

    <path id="no.tdt4250.assingment.studyProgramme.acceleo.classpath">
        <path refid="no.tdt4250.assingment.studyProgramme.acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="no.tdt4250.assingment.studyProgramme.acceleo.libraryclasspath.alljars">
        <pathelement location="../no.tdt4250.assingment.studyProgramme.acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="no.tdt4250.assingment.studyProgramme.acceleo.classpath.alljars">
        <path refid="no.tdt4250.assingment.studyProgramme.acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="no.tdt4250.assingment.studyProgramme.acceleo.main.Generate" classpathref="no.tdt4250.assingment.studyProgramme.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="no.tdt4250.assingment.studyProgramme.acceleo.main.Generate" classpathref="no.tdt4250.assingment.studyProgramme.acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
